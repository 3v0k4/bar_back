<header>
  <div class="container">
    <%= render "bar_back/logo", href: root_path, klass: "logo", target: nil %>
  </div>
</header>

<div class="container">
  <h1 class="h1"><%= @query.name %></h1>
</div>

<%= render "bar_back/queries/form", query: @query %>

<div class="container">
  <% if @query.errors.any? %>
    <%= render 'bar_back/root/errors', full_messages: @query.errors.full_messages %>
  <% else %>
    <%= render "bar_back/queries/results", for: @for, allow_writes?: true, query: @query, result: @result, record: @record %>
  <% end %>
</div>
