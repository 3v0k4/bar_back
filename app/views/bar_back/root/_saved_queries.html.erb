<div class="container saved-queries">
  <h2>Saved Queries</h2>

  <% if queries.size == 0 %>
    <p>Save some queries to see them here.</p>
  <% else %>
    <ul>
      <% queries.each_with_index do |query, i| %>
        <% if i != 0 %>
          <%= render 'bar_back/divider' %>
        <% end %>

        <li class="saved-queries__item">
          <div class="saved-queries__header">
            <h3><%= link_to query.name, query_records_path(query_id: query.id), class: "saved-queries__name" %></h3>
            <span class="saved-queries__tag saved-queries__tag--<%= query.public? ? "public" : "private" %>">
              <i class="icon <%= query.public? ? "icon--eye" : "icon--lock" %>">
                <% if query.public? %>
                  <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 100 100" style="enable-background:new 0 0 100 100;" xml:space="preserve"><path d="M91.2,47c-0.8-1.1-20.6-27.2-41.4-27.2S9.3,45.9,8.4,47c-0.8,1.1-0.8,2.5,0,3.6c0.8,1.1,20.6,27.2,41.4,27.2s40.6-26.1,41.4-27.2C92,49.6,92,48.1,91.2,47z M49.8,61.8c-7.2,0-13-5.8-13-13s5.8-13,13-13s13,5.8,13,13S57,61.8,49.8,61.8z"/></svg>
                <% else %>
                  <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 65 65" style="enable-background:new 0 0 65 65;" xml:space="preserve"><path d="M52.5,27h-2.6l0,0v-9.1c0-9.6-7.8-17.4-17.4-17.4S15.1,8.3,15.1,17.9V27h-2.6c-2,0-3.7,1.7-3.7,3.7v2.2v25.6v2.2c0,2,1.7,3.7,3.7,3.7h20h20c2,0,3.7-1.7,3.7-3.7v-2.2V32.9v-2.2C56.2,28.7,54.5,27,52.5,27z M36.4,53.4h-7.9l1.4-6.7c-1.3-0.8-2.2-2.3-2.2-4c0-2.6,2.1-4.7,4.7-4.7s4.7,2.1,4.7,4.7c0,1.7-0.9,3.1-2.2,4L36.4,53.4z M32.5,27H21.3l0,0v-9.1c0-6.2,5-11.2,11.2-11.2s11.2,5,11.2,11.2V27H32.5z"/></svg>
                <% end %>
              </i>
              <%= query.public? ? "public" : "private" %>
            </span>
          </div>

          <p class="saved-queries__string"><%= query.string %></p>

          <%= button_to "Delete", query_path(id: query.id), method: :delete, data: { confirm: "Are you sure?" }, class: "saved-queries__delete" %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
